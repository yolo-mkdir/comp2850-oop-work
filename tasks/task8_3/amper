#!/bin/bash

# Simple wrapper script for running the weather station application
# In a real Amper project, this would be generated by the Amper tool

echo "Running Weather Station Temperature Analysis..."
echo ""

# Check if Kotlin is available
if command -v kotlin &> /dev/null; then
    # Compile and run the Kotlin application
    kotlinc src/main/kotlin/WeatherStation.kt -include-runtime -d weather-station.jar
    java -jar weather-station.jar
else
    echo "Error: Kotlin compiler not found."
    echo "Please install Kotlin or use the online Kotlin playground."
    echo ""
    echo "To run online, copy the contents of src/main/kotlin/WeatherStation.kt to:"
    echo "https://play.kotlinlang.org/"
    exit 1
fi
